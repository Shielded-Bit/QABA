# =================================
# QABA Environment Configuration
# =================================
# Copy this file to .env and update the values

# =================================
# Django Backend Configuration
# =================================
DJANGO_SETTINGS_MODULE=core.settings.development
SECRET_KEY=your-very-secret-key-change-in-production-must-be-50-chars-long
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,backend,0.0.0.0
CSRF_TRUSTED_ORIGINS=
CORS_ALLOWED_ORIGINS=

# =================================
# Database Configuration
# =================================
DB_NAME=qaba_db
DB_USER=qaba_user
DB_PASSWORD=qaba_password
DB_HOST=db
DB_PORT=5432

# If you use the official Postgres image, these are required by the container
POSTGRES_DB=qaba_db
POSTGRES_USER=qaba_user
POSTGRES_PASSWORD=qaba_password

# =================================
# URL Configuration
# =================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# =================================
# Email Configuration
# =================================
# Gmail SMTP configuration (recommended)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USE_TLS=False
EMAIL_USE_SSL=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# =================================
# Cloudinary Configuration
# =================================
# Get these from your Cloudinary dashboard
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# =================================
# JWT Token Configuration
# =================================
ACCESS_TOKEN_LIFETIME=15
REFRESH_TOKEN_LIFETIME=30
PASSWORD_RESET_TIMEOUT=3600

# =================================
# Payment Configuration (Flutterwave)
# =================================
# Get these from your Flutterwave dashboard
FLW_SECRET_KEY=your-flutterwave-secret-key
PAYMENT_REDIRECT_URL=http://localhost:3000
FLUTTERWAVE_SECRET_HASH=your-flutterwave-secret-hash